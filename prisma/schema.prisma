// Prisma Schema for Greentera
// PostgreSQL Database

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ========================================
// User Model
// ========================================
model User {
  id                      String    @id @default(cuid())
  name                    String
  email                   String    @unique
  emailVerified           DateTime?
  password                String?   // Nullable for OAuth users
  image                   String?
  location                String    @default("Jakarta")
  
  // Gamification Stats
  points                  Int       @default(0)
  level                   Level     @default(BRONZE)
  totalWaste              Float     @default(0)
  treesGrown              Int       @default(0)
  ecoXp                   Int       @default(0)
  treeStage               TreeStage @default(SEED)
  streak                  Int       @default(0)
  lastDepositDate         DateTime?
  
  // Role
  role                    Role      @default(USER)
  
  // Timestamps
  createdAt               DateTime  @default(now())
  updatedAt               DateTime  @updatedAt
  
  // Relations
  accounts                Account[]
  sessions                Session[]
  wasteDeposits           WasteDeposit[]
  vouchers                Voucher[]
  quizAttempts            QuizAttempt[]
  notifications           Notification[]
  
  @@map("users")
}

// ========================================
// NextAuth Models
// ========================================
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ========================================
// Waste Deposit Model
// ========================================
model WasteDeposit {
  id            String    @id @default(cuid())
  userId        String
  wasteType     WasteType
  amount        Float     // in kg
  pointsEarned  Int
  ecoXpEarned   Int
  scanMethod    ScanMethod @default(MANUAL)
  imageUrl      String?   // For AI scanned images
  depositDate   DateTime  @default(now())
  
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([depositDate])
  @@map("waste_deposits")
}

// ========================================
// Voucher Template Model (Admin-managed)
// ========================================
model VoucherTemplate {
  id          String    @id @default(cuid())
  name        String    @unique   // "Pulsa 10K", "E-Wallet 50K"
  description String?
  icon        String    @default("üéÅ")
  category    String    @default("PULSA") // PULSA, EWALLET, DISCOUNT
  nominal     Int       // Value in Rupiah
  pointsCost  Int       // Points needed to redeem
  stock       Int       @default(-1) // -1 = unlimited
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  vouchers    Voucher[]
  
  @@map("voucher_templates")
}

// ========================================
// Voucher Model
// ========================================
model Voucher {
  id            String       @id @default(cuid())
  userId        String
  voucherType   VoucherType? // Optional for backwards compatibility
  voucherCode   String       @unique
  pointsUsed    Int
  nominal       Int          // in Rupiah
  isRedeemed    Boolean      @default(false)
  redeemedAt    DateTime?
  createdAt     DateTime     @default(now())
  expiresAt     DateTime?
  
  // New: Optional relation to template
  templateId    String?
  template      VoucherTemplate? @relation(fields: [templateId], references: [id])
  
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([voucherCode])
  @@index([templateId])
  @@map("vouchers")
}

// ========================================
// Education Models
// ========================================
model EducationArticle {
  id        String   @id @default(cuid())
  title     String   @unique
  content   String   @db.Text
  category  String
  imageUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("education_articles")
}

model EducationQuiz {
  id            String   @id @default(cuid())
  question      String   @unique
  options       String[] // Array of options
  correctAnswer String
  pointsReward  Int      @default(10)
  category      String?
  createdAt     DateTime @default(now())
  
  attempts      QuizAttempt[]

  @@map("education_quizzes")
}

model QuizAttempt {
  id          String   @id @default(cuid())
  userId      String
  quizId      String
  isCorrect   Boolean
  attemptDate DateTime @default(now())
  
  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  quiz        EducationQuiz @relation(fields: [quizId], references: [id], onDelete: Cascade)
  
  @@unique([userId, quizId])
  @@map("quiz_attempts")
}

// ========================================
// App Settings Model
// ========================================
model AppSettings {
  id        String   @id @default("settings")
  config    Json     // Stores all app configuration as JSON
  updatedAt DateTime @updatedAt

  @@map("app_settings")
}

// ========================================
// Notification Model
// ========================================
model Notification {
  id          String           @id @default(cuid())
  userId      String
  type        NotificationType
  title       String
  message     String
  isRead      Boolean          @default(false)
  actionUrl   String?
  createdAt   DateTime         @default(now())
  
  user        User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([createdAt])
  @@map("notifications")
}

// ========================================
// Enums
// ========================================
enum Role {
  USER
  ADMIN
}

enum Level {
  BRONZE
  SILVER
  GOLD
}

enum TreeStage {
  SEED
  SPROUT
  SMALL
  MEDIUM
  LARGE
}

enum WasteType {
  ORGANIC
  PLASTIC
  METAL
  PAPER
}

enum ScanMethod {
  MANUAL
  AI_SCAN
}

enum VoucherType {
  PULSA_10K
  PULSA_20K
  PULSA_50K
  DISCOUNT_10
  DISCOUNT_25
  DISCOUNT_50
}

enum NotificationType {
  POINTS_EARNED
  LEVEL_UP
  VOUCHER_REDEEMED
  TREE_GROWN
  QUIZ_COMPLETED
  SYSTEM
  ADMIN_ANNOUNCEMENT
}
